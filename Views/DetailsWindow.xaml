<Window x:Class="InventoryManagement.Views.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:InventoryManagement.Views"
        mc:Ignorable="d"
        Title="DetailsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="CAS NO:" FontWeight="Bold" />
            <TextBlock Text="{Binding CAS_NO}" Margin="0,0,0,10" />
            
            <TextBlock Text="한글명:" FontWeight="Bold" />
            <TextBlock Text="{Binding Kor_Name}" Margin="0,0,0,10" />
            
            <TextBlock Text="영문명:" FontWeight="Bold" />
            <TextBlock Text="{Binding Eng_Name}" Margin="0,0,0,10" />
            
            <TextBlock Text="상태:" FontWeight="Bold" />
            <TextBlock Text="{Binding Status}" Margin="0,0,0,10" />
            
            <TextBlock Text="색:" FontWeight="Bold" />
            <TextBlock Text="{Binding Color}" Margin="0,0,0,10" />
            
        </StackPanel>
    </Grid>
</Window>
